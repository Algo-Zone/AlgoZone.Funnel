<?xml version="1.0" encoding="utf-8" ?>
<nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
    <extensions>
        <add assembly="NLog.Targets.ElasticSearch"/>
    </extensions>
    <targets>
        <target name="console" xsi:type="Console" />
        <target name="elastic.logs.funnel" xsi:type="BufferingWrapper" flushTimeout="5000">
            <target xsi:type="ElasticSearch" uri="http://elastic.lan/" index="logs.funnel" />
        </target>
    </targets>
    <rules>
        <logger name="*" minlevel="Info" writeTo="console" />
        <logger name="*" minlevel="Info" writeTo="elastic.logs.funnel" />
    </rules>
</nlog>